<%= render 'shared/pagination', :locals => {:target => @action_states, :model_index_path => action_states_path, :form_id => "per_page_change_form_top", :on_change => "mergeForms('per_page_change_form_top')".html_safe} %>

<div class="controls">
  <%= link_to t("helpers.link.new") + ' Action state', new_action_state_path if can? :create, ActionState %>
</div>

<table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
  <tr>
    <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :name, t("simple_form.labels.name") %></th>
    <th class="table-header-options line-left"><a href="#"><%= t("simple_form.labels.actions") %></a></th>
  </tr>

  <% @action_states.each do |action_state| %>
      <tr class=<%= cycle("alternate-row", "") %>>
        <td><%= action_state.name %></td>
        <td class="options-width">
          <%= link_to '', action_state, :class=>"icon-1 info-tooltip", :title => t("helpers.link.show") if can? :read, action_state %>
          <%= link_to '', edit_action_state_path(action_state), :class=>"icon-3 info-tooltip", :title => t("helpers.link.edit") if can? :update, action_state %>
          <%= link_to '', action_state, :class=>"icon-2 info-tooltip", :title => t("helpers.link.delete"), :confirm => t("helpers.messages.are_you_sure"), :method => :delete if can? :destroy, action_state %>
        </td>
      </tr>
  <% end %>
</table>

<%= render 'shared/pagination', :locals => {:target => @action_states, :model_index_path => action_states_path, :form_id => "per_page_change_form_bottom", :on_change => "mergeForms('per_page_change_form_bottom')".html_safe} %>

<div class="controls">
  <%= link_to t("helpers.link.new") + ' Action state', new_action_state_path if can? :create, ActionState %>
</div>



