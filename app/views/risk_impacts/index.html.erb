<%= render 'shared/pagination', :locals => {:target => @risk_impacts, :model_index_path => risk_impacts_path, :form_id => "per_page_change_form_top", :on_change => "mergeForms('per_page_change_form_top')".html_safe} %>

<div class="controls">
  <%= link_to t("helpers.link.new") + ' Risk impact', new_risk_impact_path if can? :create, RiskImpact %>
</div>




<table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
  <tr>
    <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :name, t("simple_form.labels.name") %></th>
    <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :description, t("simple_form.labels.description") %></th>
    <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :state_name, t("simple_form.labels.state") %></th>
    <th class="table-header-options line-left"><a href="#"><%= t("simple_form.labels.actions") %></a></th>
  </tr>

  <% @risk_impacts.each do |risk_impact| %>
      <tr class=<%= cycle("alternate-row", "") %>>
        <td><%= risk_impact.name %></td>
        <td><%= risk_impact.description %></td>
        <td><%= risk_impact.state.try(:name) %></td>
        <td class="options-width">
          <%= link_to '', risk_impact, :class=>"icon-1 info-tooltip", :title => t("helpers.link.show") if can? :read, risk_impact %>
          <%= link_to '', edit_risk_impact_path(risk_impact), :class=>"icon-3 info-tooltip", :title => t("helpers.link.edit") if can? :update, risk_impact %>
          <%= link_to '', risk_impact, :class=>"icon-2 info-tooltip", :title => t("helpers.link.delete"), :confirm => t("helpers.messages.are_you_sure"), :method => :delete if can? :destroy, risk_impact %>
        </td>
      </tr>
  <% end %>
</table>

<%= render 'shared/pagination', :locals => {:target => @risk_impacts, :model_index_path => risk_impacts_path, :form_id => "per_page_change_form_bottom", :on_change => "mergeForms('per_page_change_form_bottom')".html_safe} %>

<div class="controls">
  <%= link_to t("helpers.link.new") + ' Risk impact', new_risk_impact_path if can? :create, RiskImpact %>
</div>



