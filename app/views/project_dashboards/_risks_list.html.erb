<div id="risks_div" class="display-none max-1170">
  <div style="max-width:1168px; margin-top:20px;">

  <div class="buttons">
    <%= link_to image_tag('/images/glyphicons/glyphicons_009_magic.png', :alt => '') + " " + t("helpers.link.create", :model => t("activerecord.models.Risk")), new_risk_path(:risk_goto => project_dashboard_path(@project_dashboard)) if @can_create_edit && (can? :create, Risk) %>
  </div>

    <table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
      <tr>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.name") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.description") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.detection_date") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.umbral") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.mitigation") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.contingency") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.real_cost") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.currency") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.risk_source") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.risk_category") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.risk_exposition") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.responsible_user") %></a></th>
        <th class="table-header-repeat line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.risk_state") %></a></th>
        <th class="table-header-options line-left"><a href="#" onclick="return false"><%= t("simple_form.labels.actions") %></a></th>
      </tr>

      <% @risks.each do |risk| %>
          <tr class=<%= cycle("alternate-row", "") %>>
            <td><%= risk.name %></td>
            <td><%= risk.description %></td>
            <td><%= risk.detection_date %></td>
            <td><%= risk.umbral %></td>
            <td><%= risk.mitigation %></td>
            <td><%= risk.contingency %></td>
            <td><%= risk.real_cost %></td>
            <td><%= risk.currency %></td>
            <td><%= risk.risk_source.try(:name) %></td>
            <td><%= risk.life_cycle_phase.try(:name) %></td>
            <td><%= risk.risk_exposition.try(:name) %></td>
            <td><%= risk.responsible_user.try(:name) %></td>
            <td><%= risk.risk_state.try(:name) %></td>
            <%= render 'action_icons_for_lists', :locals => {:target => risk, :model_edit_path => edit_risk_path(risk, :risk_goto => project_dashboard_path(@project_dashboard))} %>
          </tr>
      <% end %>
    </table>
  </div>
</div>