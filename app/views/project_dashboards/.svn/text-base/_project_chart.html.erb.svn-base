<div style="float: left;">
  <div align="left" style="min-width:325px; margin:0 40px 4px 10px; padding:1px 5px 1px 5px; background-color:#eeeeee; border:solid; border-width:1px; border-color:#aaaaaa;">
    <table width=100%>
      <tr>
        <td width="26%" rowspan="2" style="border-right:solid 1px; vertical-align:middle; border-color:#aaaaaa;"> <button class="minus_chart <%= locals[:container_id] %>"></button> <button class="one_to_one_chart <%= locals[:container_id] %>"></button> <button class="plus_chart <%= locals[:container_id] %>"></button></td>
        <td width="32%" style="padding-left:5px;"><%= locals[:label_1] %>: </td>
        <td width="32%" align="right" style="padding-right:5px;"><%= locals[:value_1] %><%= locals[:posfix] %></td>
        <td width="10%" rowspan="2" align="center" style="border-left:solid 0px; border-color:#aaaaaa; vertical-align:bottom;"><img src="/images/icons/<%= locals[:deviation][:image]%>"></td>
      </tr>
      <tr>
        <td style="padding-left:5px;"><%= locals[:label_2] %>: </td>
        <td style="padding-right:5px;" align="right"><%= locals[:value_2] %><%= locals[:posfix] %></td>
      </tr>
    </table>
  </div>
  <div id="<%= locals[:container_id] %>" style="margin: 0 0px 30px 0;"></div>
</div>