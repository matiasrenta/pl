<%= render "devise/shared/error_messages", :target => resource %>

<div id="loginbox">
    <div id="forgotbox-text"><%= t("devise.labels.send_us_your_email") %></div>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |f| %>
    <!--  start forgot-inner -->
    <div id="forgot-inner">
      <table border="0" cellpadding="0" cellspacing="0">
        <tr>
          <th><%= t("devise.labels.email") %>:</th>
          <td><%= f.email_field :email, :class => "login-inp" %></td>
        </tr>
        <tr>

          <th></th>
          <td><%= f.submit "Send me reset password instructions", :class => "submit-login" %></td>
        </tr>
      </table>
    </div>
    <!--  end forgot-inner -->
    <div class="clear"></div>
    <%= render :partial => "devise/shared/links" %>
   <% end %>
</div>


