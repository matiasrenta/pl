<div class="gray_form">
  <%= simple_form_for(@expense_type) do |f| %>

      <div class="inputs">
        <%= f.input :title %>
        <%= f.input :description, :input_html => {:rows => 4, :cols => 30} %>
        <%= f.association :state, :input_html => {:disabled => creating?}%>
        <%= f.input :state_id, :as => :hidden if creating? %>
      </div>

      <%= render "shared/submit_form_model", :model_class => ExpenseType %>

  <% end %>
</div>


