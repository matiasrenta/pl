<% if flash[:warning] %>
    <!--  start message-yellow -->
    <div id="message-yellow">
      <table border="0" width="100%" cellpadding="0" cellspacing="0">
        <tr>
          <td class="yellow-left"><%= flash[:warning] %></td>
          <td class="yellow-right">
            <a class="close-yellow"><img src="/stylesheets/skin1/images/table/icon_close_yellow.gif" alt=""/></a></td>
        </tr>
      </table>
    </div>
    <!--  end message-yellow -->
<% end %>

