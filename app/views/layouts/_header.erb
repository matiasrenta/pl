<!-- Start: page-top-outer -->
<div id="page-top-outer">

  <!-- Start: page-top -->
  <div id="page-top">

    <!-- start logo -->
    <div id="logo">
      <a href="<%=root_path%>"><img src="/stylesheets/skin1/images/shared/<%= LOGO %>" width="200" height="60" alt=""/></a>
    </div>
    <!-- end logo -->

    <!--  start top-search -->
    <div id="top-search">
      <table border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td style="width:250px; text-align:left;">
          </td>
          <td rowspan="2">
            <div style="margin:0 0 0 20px; padding:0 0 0 0;">
              <%#= image_tag avatar_url(current_user), :height => "48", :width => "48", :style => "margin:0 0 0 0; padding:0 0 0 0;" %>
            </div>
          </td>
          <td rowspan="2">
            <div class="user_box">
              <h5><%= current_user.name %> <%= current_user.last_name %></h5>
              <%= link_to t("screens.links.my_account"), user_path(current_user.id) %>
              <%= link_to t("screens.links.close_session"), destroy_user_session_path %>
            </div>
          </td>

        </tr>
        <tr>
          <td style="text-align:left;">
          </td>
        </tr>
      </table>
    </div>
    <!--  end top-search -->
  </div>
  <!-- End: page-top -->

</div>
<!-- End: page-top-outer -->