<%= render 'shared/pagination', :locals => {:target => @task_types, :model_index_path => task_types_path, :form_id => "per_page_change_form_top", :on_change => "mergeForms('per_page_change_form_top')".html_safe} %>

<div class="controls">
  <%= link_to t("helpers.link.new") + ' Task type', new_task_type_path if can? :create, TaskType %>
</div>

<table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
  <tr>
    <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :name, t("simple_form.labels.name") %></th>
    <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :description, t("simple_form.labels.description") %></th>
    <th class="table-header-options line-left"><a href="#"><%= t("simple_form.labels.actions") %></a></th>
  </tr>

  <% @task_types.each do |task_type| %>
      <tr class=<%= cycle("alternate-row", "") %>>
        <td><%= task_type.name %></td>
        <td><%= task_type.description %></td>
        <td class="options-width">
          <%= link_to '', task_type, :class=>"icon-1 info-tooltip", :title => t("helpers.link.show") if can? :read, task_type %>
          <%= link_to '', edit_task_type_path(task_type), :class=>"icon-3 info-tooltip", :title => t("helpers.link.edit") if can? :update, task_type %>
          <%= link_to '', task_type, :class=>"icon-2 info-tooltip", :title => t("helpers.link.delete"), :confirm => t("helpers.messages.are_you_sure"), :method => :delete if can? :destroy, task_type %>
        </td>
      </tr>
  <% end %>
</table>

<%= render 'shared/pagination', :locals => {:target => @task_types, :model_index_path => task_types_path, :form_id => "per_page_change_form_bottom", :on_change => "mergeForms('per_page_change_form_bottom')".html_safe} %>

<div class="controls">
  <%= link_to t("helpers.link.new") + ' Task type', new_task_type_path if can? :create, TaskType %>
</div>



