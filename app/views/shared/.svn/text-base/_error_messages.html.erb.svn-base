<% if target.errors.any? %>
  <!--  start message-red -->
  <div class="clear"></div>
  <div id="message-red">
    <table border="0" width="100%" cellpadding="0" cellspacing="0">
      <tr>
        <%#= pluralize(target.errors.count, "error") %>
        <% if target.errors.count > 1 %>
            <td class="red-left"> <%= target.errors.count %> <%= t("screens.errors.many_errors") %>: <%= (target.errors.on_base().kind_of? String) ? target.errors.on_base() : target.errors.on_base().join(". ") if target.errors.on_base() %></td>
        <% else %>
            <td class="red-left"> <%= target.errors.count %> <%= t("screens.errors.one_error") %>: <%=  target.errors.on_base() %> </td>
        <% end %>
        <td class="red-right">
          <a class="close-red"><img src="/stylesheets/skin1/images/table/icon_close_red.gif" alt=""/></a></td>
      </tr>
    </table>
  </div>
  <!--  end message-red -->

  <!-- colocar esto para que muestre mas errores -->
  <!--
  <div style="background-color:red; width:500px; height:30px;">
  <%#= target.errors.full_messages %>
  </div>
  -->
<% end %>