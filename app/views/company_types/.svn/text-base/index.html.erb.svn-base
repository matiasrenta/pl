<%= render 'shared/pagination', :locals => {:target => @company_types, :model_index_path => company_types_path, :form_id => "per_page_change_form_top", :on_change => "mergeForms('per_page_change_form_top')".html_safe} %>

<div class="controls">
  <%= link_to t("helpers.link.new") + ' Company type', new_company_type_path if can? :create, CompanyType %>
</div>

<table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
  <tr>
    <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :name, t("simple_form.labels.name") %></th>
    <th class="table-header-options line-left"><a href="#"><%= t("simple_form.labels.actions") %></a></th>
  </tr>

  <% @company_types.each do |company_type| %>
      <tr class=<%= cycle("alternate-row", "") %>>
        <td><%= company_type.name %></td>
        <td class="options-width">
          <%= link_to '', company_type, :class=>"icon-1 info-tooltip", :title => t("helpers.link.show") if can? :read, company_type %>
          <%= link_to '', edit_company_type_path(company_type), :class=>"icon-3 info-tooltip", :title => t("helpers.link.edit") if can? :update, company_type %>
          <%= link_to '', company_type, :class=>"icon-2 info-tooltip", :title => t("helpers.link.delete"), :confirm => t("helpers.messages.are_you_sure"), :method => :delete if can? :destroy, company_type %>
        </td>
      </tr>
  <% end %>
</table>

<%= render 'shared/pagination', :locals => {:target => @company_types, :model_index_path => company_types_path, :form_id => "per_page_change_form_bottom", :on_change => "mergeForms('per_page_change_form_bottom')".html_safe} %>

<div class="controls">
  <%= link_to t("helpers.link.new") + ' Company type', new_company_type_path if can? :create, CompanyType %>
</div>



