<%= render 'shared/pagination', :locals => {:target => @press_types, :model_index_path => press_types_path, :form_id => "per_page_change_form_top", :on_change => "mergeForms('per_page_change_form_top')".html_safe} %>

<%= render "shared/control_buttons", :locals => { :model_class => PressType } %>

<div class="toggle_container">
	<div class="block">

<%= simple_form_for(@search, :html => {:name => "filter_form"}) do |f| %>
    <%= f.error_notification %>
        <%= f.input :name_contains, :label => t("simple_form.labels.name") %>
            <%= f.input :description_contains, :label => t("simple_form.labels.description") %>
        <%= render "shared/submit_form_filter" %>
<% end %>

    </div>
</div>


<table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
  <tr>
                        <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :name, t("simple_form.labels.name") %></th>
                                <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :description, t("simple_form.labels.description") %></th>
                <th class="table-header-options line-left"><a href="#"><%= t("simple_form.labels.actions") %></a></th>
  </tr>

  <% @press_types.each do |press_type| %>
  <tr class=<%= cycle("alternate-row", "") %>>
                      <td><%= press_type.name %></td>
                              <td><%= press_type.description %></td>
            <%= render 'shared/action_icons', :locals => {:target => press_type, :model_edit_path => edit_press_type_path(press_type)} %>
  </tr>
  <% end %>
</table>

<%= render 'shared/pagination', :locals => {:target => @press_types, :model_index_path => press_types_path, :form_id => "per_page_change_form_bottom", :on_change => "mergeForms('per_page_change_form_bottom')".html_safe} %>

<%= render "shared/control_buttons", :locals => { :model_class => PressType, :no_filter => true } %>


