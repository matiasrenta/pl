<%= render 'shared/pagination', :locals => {:target => @finishes, :model_index_path => finishes_path, :form_id => "per_page_change_form_top", :on_change => "mergeForms('per_page_change_form_top')".html_safe} %>

<%= render "shared/control_buttons", :locals => {:model_class => Finish} %>

<div class="toggle_container">
  <div class="block">

    <%= simple_form_for(@search, :html => {:name => "filter_form"}) do |f| %>
        <%= f.error_notification %>
        <%= f.input :code_contains, :label => t("simple_form.labels.code") %>
        <%= f.input :name_contains, :label => t("simple_form.labels.name") %>
        <%= render "shared/submit_form_filter" %>
    <% end %>

  </div>
</div>


<table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
  <tr>
    <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :code, t("simple_form.labels.code") %></th>
    <th class="table-header-repeat line-left minwidth-1"><%= sort_link @search, :name, t("simple_form.labels.name") %></th>
    <th class="table-header-options line-left"><a href="#"><%= t("simple_form.labels.actions") %></a></th>
  </tr>

  <% @finishes.each do |finish| %>
      <tr class=<%= cycle("alternate-row", "") %>>
        <td><%= finish.code %></td>
        <td><%= finish.name %></td>
        <%= render 'shared/action_icons', :locals => {:target => finish, :model_edit_path => edit_finish_path(finish)} %>
      </tr>
  <% end %>
</table>

<%= render 'shared/pagination', :locals => {:target => @finishes, :model_index_path => finishes_path, :form_id => "per_page_change_form_bottom", :on_change => "mergeForms('per_page_change_form_bottom')".html_safe} %>

<%= render "shared/control_buttons", :locals => {:model_class => Finish, :no_filter => true} %>


